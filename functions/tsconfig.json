{
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*",
    "./.eslintrc.js"
  ]
}
